<Page x:Class="FileSystemVisualizer.Views.SelectionView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Selección de Sistema de Archivos"
      Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="30,25">
            <StackPanel>
                <TextBlock Text="Visualizador de Sistemas de Archivos" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Seleccione el tipo de sistema de archivos que desea visualizar" 
                          FontSize="16" 
                          Foreground="#ECF0F1"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- FAT Card -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="10" 
                    Margin="10"
                    BorderBrush="#3498DB"
                    BorderThickness="2"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="15" ShadowDepth="5"/>
                </Border.Effect>
                <Button Command="{Binding SelectFatCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Margin="30" HorizontalAlignment="Center">
                        <Ellipse Width="100" Height="100" Fill="#3498DB" Margin="0,20,0,20">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#3498DB" Opacity="0.4" BlurRadius="20"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="FAT" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="File Allocation Table" 
                                  FontSize="14" 
                                  Foreground="#7F8C8D"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>
                        <TextBlock Text="Sistema de archivos usado en MS-DOS y Windows. Utiliza una tabla de asignación de archivos." 
                                  FontSize="12" 
                                  Foreground="#95A5A6"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"
                                  LineHeight="18"/>
                    </StackPanel>
                </Button>
            </Border>

            <!-- Unix/EXT Card -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Margin="10"
                    BorderBrush="#E74C3C"
                    BorderThickness="2"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="15" ShadowDepth="5"/>
                </Border.Effect>
                <Button Command="{Binding SelectUnixCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Margin="30" HorizontalAlignment="Center">
                        <Ellipse Width="100" Height="100" Fill="#E74C3C" Margin="0,20,0,20">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#E74C3C" Opacity="0.4" BlurRadius="20"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="UNIX / EXT" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Extended File System" 
                                  FontSize="14" 
                                  Foreground="#7F8C8D"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>
                        <TextBlock Text="Sistema de archivos de Linux/Unix. Utiliza i-nodos con punteros directos e indirectos." 
                                  FontSize="12" 
                                  Foreground="#95A5A6"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"
                                  LineHeight="18"/>
                    </StackPanel>
                </Button>
            </Border>

            <!-- NTFS Card -->
            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="10" 
                    Margin="10"
                    BorderBrush="#2ECC71"
                    BorderThickness="2"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="15" ShadowDepth="5"/>
                </Border.Effect>
                <Button Command="{Binding SelectNtfsCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Margin="30" HorizontalAlignment="Center">
                        <Ellipse Width="100" Height="100" Fill="#2ECC71" Margin="0,20,0,20">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#2ECC71" Opacity="0.4" BlurRadius="20"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="NTFS" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="New Technology File System" 
                                  FontSize="14" 
                                  Foreground="#7F8C8D"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>
                        <TextBlock Text="Sistema de archivos de Windows NT. Utiliza la Master File Table (MFT) para gestionar archivos." 
                                  FontSize="12" 
                                  Foreground="#95A5A6"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"
                                  LineHeight="18"/>
                    </StackPanel>
                </Button>
            </Border>
        </Grid>
    </Grid>
</Page>
