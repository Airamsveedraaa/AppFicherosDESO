<Page x:Class="FileSystemVisualizer.Views.FatInputView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Configuración FAT"
      Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#3498DB" Padding="30,25">
            <StackPanel>
                <TextBlock Text="Configuración del Sistema FAT" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Ingrese los parámetros para el sistema de archivos FAT" 
                          FontSize="16" 
                          Foreground="#ECF0F1"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" 
                    CornerRadius="10" 
                    Margin="50,30"
                    Padding="40">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="20" ShadowDepth="5"/>
                </Border.Effect>
                <StackPanel MaxWidth="600">
                    <!-- Disk Size -->
                    <TextBlock Text="Tamaño del Disco (GB)" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <TextBox Text="{Binding DiskSizeGB, UpdateSourceTrigger=PropertyChanged}" 
                            FontSize="14"
                            Padding="10"
                            Margin="0,0,0,25"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"/>

                    <!-- Cluster Size -->
                    <TextBlock Text="Tamaño del Clúster (KB)" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <ComboBox SelectedValue="{Binding ClusterSizeKB}" 
                             FontSize="14"
                             Padding="10"
                             Margin="0,0,0,25"
                             BorderBrush="#BDC3C7"
                             BorderThickness="1">
                        <ComboBox.Items>
                            <ComboBoxItem Content="1 KB" Tag="1"/>
                            <ComboBoxItem Content="2 KB" Tag="2"/>
                            <ComboBoxItem Content="4 KB" Tag="4" IsSelected="True"/>
                            <ComboBoxItem Content="8 KB" Tag="8"/>
                            <ComboBoxItem Content="16 KB" Tag="16"/>
                            <ComboBoxItem Content="32 KB" Tag="32"/>
                        </ComboBox.Items>
                    </ComboBox>

                    <!-- FAT Type -->
                    <TextBlock Text="Tipo de FAT" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <ComboBox SelectedValue="{Binding FatType}" 
                             FontSize="14"
                             Padding="10"
                             Margin="0,0,0,10"
                             BorderBrush="#BDC3C7"
                             BorderThickness="1">
                        <ComboBoxItem Content="Auto-detectar" Tag="Auto" IsSelected="True"/>
                        <ComboBoxItem Content="FAT12" Tag="FAT12"/>
                        <ComboBoxItem Content="FAT16" Tag="FAT16"/>
                        <ComboBoxItem Content="FAT32" Tag="FAT32"/>
                    </ComboBox>
                    <TextBlock Text="Auto-detectar seleccionará el tipo apropiado según el número de bloques" 
                              FontSize="12" 
                              Foreground="#7F8C8D"
                              FontStyle="Italic"
                              Margin="0,5,0,25"
                              TextWrapping="Wrap"/>

                    <!-- Number of Files -->
                    <TextBlock Text="Número de Archivos a Simular" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <TextBox Text="{Binding NumberOfFiles, UpdateSourceTrigger=PropertyChanged}" 
                            FontSize="14"
                            Padding="10"
                            Margin="0,0,0,10"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"/>
                    <TextBlock Text="Número de archivos que se crearán en la simulación" 
                              FontSize="12" 
                              Foreground="#7F8C8D"
                              FontStyle="Italic"
                              Margin="0,5,0,0"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="White" Padding="30,20" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid MaxWidth="800">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                       Command="{Binding BackCommand}"
                       Content="← Volver" 
                       FontSize="16"
                       Padding="20,12"
                       Margin="0,0,10,0"
                       Background="#95A5A6"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1" 
                       Command="{Binding ContinueCommand}"
                       Content="Continuar →" 
                       FontSize="16"
                       Padding="20,12"
                       Margin="10,0,0,0"
                       Background="#3498DB"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#BDC3C7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
