<Page x:Class="FileSystemVisualizer.Views.UnixInputFlexibleView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="900"
      Title="ConfiguraciÃ³n Unix/EXT Flexible"
      Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#E74C3C" Padding="30,25">
            <StackPanel>
                <TextBlock Text="ConfiguraciÃ³n del Sistema Unix/EXT" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Configure la estructura de i-nodos segÃºn sus necesidades" 
                          FontSize="16" 
                          Foreground="#ECF0F1"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" 
                    CornerRadius="10" 
                    Margin="50,30"
                    Padding="40">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="20" ShadowDepth="5"/>
                </Border.Effect>
                <StackPanel MaxWidth="700">
                    
                    <!-- Disk Configuration Section -->
                    <TextBlock Text="ðŸ“ ConfiguraciÃ³n del Disco" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,20"/>
                    
                    <!-- Disk Size -->
                    <TextBlock Text="TamaÃ±o del Disco *" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                Text="{Binding DiskSizeValue, UpdateSourceTrigger=PropertyChanged}" 
                                FontSize="14"
                                Padding="10"
                                Margin="0,0,5,0"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"/>
                        <ComboBox Grid.Column="1"
                                 SelectedItem="{Binding DiskSizeUnit}"
                                 FontSize="14"
                                 Padding="10"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="1">
                            <ComboBoxItem Content="Bytes"/>
                            <ComboBoxItem Content="KB"/>
                            <ComboBoxItem Content="MB"/>
                            <ComboBoxItem Content="GB" IsSelected="True"/>
                        </ComboBox>
                    </Grid>

                    <!-- Block Size -->
                    <TextBlock Text="TamaÃ±o del Bloque *" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                Text="{Binding BlockSizeValue, UpdateSourceTrigger=PropertyChanged}" 
                                FontSize="14"
                                Padding="10"
                                Margin="0,0,5,0"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"/>
                        <ComboBox Grid.Column="1"
                                 SelectedItem="{Binding BlockSizeUnit}"
                                 FontSize="14"
                                 Padding="10"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="1">
                            <ComboBoxItem Content="Bytes"/>
                            <ComboBoxItem Content="KB" IsSelected="True"/>
                            <ComboBoxItem Content="Sectores"/>
                        </ComboBox>
                    </Grid>

                    <!-- Separator -->
                    <Border Height="1" Background="#E0E0E0" Margin="0,10,0,30"/>

                    <!-- Inode Configuration Section -->
                    <TextBlock Text="ðŸ”¢ ConfiguraciÃ³n de I-nodos" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,20"/>

                    <!-- Optional: Inode Count -->
                    <CheckBox Content="Especificar nÃºmero de i-nodos"
                             IsChecked="{Binding SpecifyInodeCount}"
                             FontSize="14"
                             Foreground="#34495E"
                             Margin="0,0,0,10"/>
                    <TextBox Margin="20,0,0,25" 
                            Text="{Binding InodeCount, UpdateSourceTrigger=PropertyChanged}"
                            IsEnabled="{Binding SpecifyInodeCount}"
                            FontSize="14"
                            Padding="10"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"/>

                    <!-- Optional: Inode Size -->
                    <CheckBox Content="Especificar tamaÃ±o del i-nodo"
                             IsChecked="{Binding SpecifyInodeSize}"
                             FontSize="14"
                             Foreground="#34495E"
                             Margin="0,0,0,10"/>
                    <Grid Margin="20,0,0,25" 
                          IsEnabled="{Binding SpecifyInodeSize}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                Text="{Binding InodeSizeValue, UpdateSourceTrigger=PropertyChanged}" 
                                FontSize="14"
                                Padding="10"
                                Margin="0,0,5,0"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"/>
                        <ComboBox Grid.Column="1"
                                 SelectedItem="{Binding InodeSizeUnit}"
                                 FontSize="14"
                                 Padding="10"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="1">
                            <ComboBoxItem Content="Bytes" IsSelected="True"/>
                            <ComboBoxItem Content="KB"/>
                        </ComboBox>
                    </Grid>

                    <!-- Separator -->
                    <Border Height="1" Background="#E0E0E0" Margin="0,10,0,30"/>

                    <!-- Inode Structure Section -->
                    <TextBlock Text="ðŸ—ï¸ Estructura del I-nodo" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,20"/>

                    <!-- Pointer Size -->
                    <TextBlock Text="TamaÃ±o del Puntero" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <ComboBox SelectedValue="{Binding PointerSizeBytes}" 
                             FontSize="14"
                             Padding="10"
                             Margin="0,0,0,25"
                             BorderBrush="#BDC3C7"
                             BorderThickness="1">
                        <ComboBoxItem Content="2 bytes (16 bits)" Tag="2"/>
                        <ComboBoxItem Content="4 bytes (32 bits)" Tag="4" IsSelected="True"/>
                        <ComboBoxItem Content="8 bytes (64 bits)" Tag="8"/>
                    </ComboBox>

                    <!-- Direct Pointers -->
                    <TextBlock Text="NÃºmero de Punteros Directos" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <TextBox Text="{Binding DirectPointers, UpdateSourceTrigger=PropertyChanged}" 
                            FontSize="14"
                            Padding="10"
                            Margin="0,0,0,10"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"/>
                    <TextBlock Text="ðŸ’¡ TÃ­picamente 10-13 punteros directos" 
                              FontSize="12" 
                              Foreground="#7F8C8D"
                              FontStyle="Italic"
                              Margin="0,5,0,25"
                              TextWrapping="Wrap"/>

                    <!-- Indirect Pointers -->
                    <TextBlock Text="Punteros Indirectos" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,15"/>
                    
                    <CheckBox Content="âœ“ Puntero indirecto simple"
                             IsChecked="{Binding HasIndirectSimple}"
                             FontSize="14"
                             Foreground="#34495E"
                             Margin="0,0,0,10"/>
                    
                    <CheckBox Content="âœ“ Puntero indirecto doble"
                             IsChecked="{Binding HasIndirectDouble}"
                             FontSize="14"
                             Foreground="#34495E"
                             Margin="0,0,0,10"/>
                    
                    <CheckBox Content="âœ“ Puntero indirecto triple"
                             IsChecked="{Binding HasIndirectTriple}"
                             FontSize="14"
                             Foreground="#34495E"
                             Margin="0,0,0,25"/>

                    <!-- Separator -->
                    <Border Height="1" Background="#E0E0E0" Margin="0,10,0,30"/>

                    <!-- Simulation Section -->
                    <TextBlock Text="ðŸŽ² SimulaciÃ³n" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,20"/>

                    <!-- Number of Files -->
                    <TextBlock Text="NÃºmero de Archivos a Simular" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <TextBox Text="{Binding NumberOfFiles, UpdateSourceTrigger=PropertyChanged}" 
                            FontSize="14"
                            Padding="10"
                            Margin="0,0,0,10"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="White" Padding="30,20" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid MaxWidth="800">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                       Command="{Binding BackCommand}"
                       Content="â† Volver" 
                       FontSize="16"
                       Padding="20,12"
                       Margin="0,0,10,0"
                       Background="#95A5A6"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1" 
                       Command="{Binding ContinueCommand}"
                       Content="Continuar â†’" 
                       FontSize="16"
                       Padding="20,12"
                       Margin="10,0,0,0"
                       Background="#E74C3C"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#BDC3C7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
