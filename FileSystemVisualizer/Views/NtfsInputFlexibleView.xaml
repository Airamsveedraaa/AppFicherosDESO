<Page x:Class="FileSystemVisualizer.Views.NtfsInputFlexibleView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="ConfiguraciÃ³n NTFS Flexible"
      Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2ECC71" Padding="30,25">
            <StackPanel>
                <TextBlock Text="ConfiguraciÃ³n del Sistema NTFS" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Configure la Master File Table segÃºn sus necesidades" 
                          FontSize="16" 
                          Foreground="#ECF0F1"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" 
                    CornerRadius="10" 
                    Margin="50,30"
                    Padding="40">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="20" ShadowDepth="5"/>
                </Border.Effect>
                <StackPanel MaxWidth="700">
                    
                    <!-- Disk Configuration Section -->
                    <TextBlock Text="ðŸ“ ConfiguraciÃ³n del Disco" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,20"/>
                    
                    <!-- Disk Size -->
                    <TextBlock Text="TamaÃ±o del Disco *" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                Text="{Binding DiskSizeValue, UpdateSourceTrigger=PropertyChanged}" 
                                FontSize="14"
                                Padding="10"
                                Margin="0,0,5,0"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"/>
                        <ComboBox Grid.Column="1"
                                 SelectedItem="{Binding DiskSizeUnit}"
                                 FontSize="14"
                                 Padding="10"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="1">
                            <ComboBoxItem Content="Bytes"/>
                            <ComboBoxItem Content="KB"/>
                            <ComboBoxItem Content="MB"/>
                            <ComboBoxItem Content="GB" IsSelected="True"/>
                        </ComboBox>
                    </Grid>

                    <!-- Cluster Size -->
                    <TextBlock Text="TamaÃ±o del ClÃºster *" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                Text="{Binding ClusterSizeValue, UpdateSourceTrigger=PropertyChanged}" 
                                FontSize="14"
                                Padding="10"
                                Margin="0,0,5,0"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"/>
                        <ComboBox Grid.Column="1"
                                 SelectedItem="{Binding ClusterSizeUnit}"
                                 FontSize="14"
                                 Padding="10"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="1">
                            <ComboBoxItem Content="Bytes"/>
                            <ComboBoxItem Content="KB" IsSelected="True"/>
                            <ComboBoxItem Content="Sectores"/>
                        </ComboBox>
                    </Grid>

                    <!-- Separator -->
                    <Border Height="1" Background="#E0E0E0" Margin="0,10,0,30"/>

                    <!-- MFT Configuration Section -->
                    <TextBlock Text="ðŸ“Š ConfiguraciÃ³n de la MFT" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,20"/>

                    <!-- MFT Entry Size -->
                    <TextBlock Text="TamaÃ±o de Entrada MFT" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                Text="{Binding MftEntrySizeValue, UpdateSourceTrigger=PropertyChanged}" 
                                FontSize="14"
                                Padding="10"
                                Margin="0,0,5,0"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"/>
                        <ComboBox Grid.Column="1"
                                 SelectedItem="{Binding MftEntrySizeUnit}"
                                 FontSize="14"
                                 Padding="10"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="1">
                            <ComboBoxItem Content="Bytes"/>
                            <ComboBoxItem Content="KB" IsSelected="True"/>
                        </ComboBox>
                    </Grid>
                    <TextBlock Text="ðŸ’¡ TÃ­picamente 1 KB por entrada" 
                              FontSize="12" 
                              Foreground="#7F8C8D"
                              FontStyle="Italic"
                              Margin="0,5,0,25"
                              TextWrapping="Wrap"/>

                    <!-- Optional: MFT Zone Percentage -->
                    <CheckBox Content="Especificar porcentaje de MFT Zone"
                             IsChecked="{Binding SpecifyMftZonePercentage}"
                             FontSize="14"
                             Foreground="#34495E"
                             Margin="0,0,0,10"/>
                    <Grid Margin="20,0,0,10" 
                          IsEnabled="{Binding SpecifyMftZonePercentage}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                Text="{Binding MftZonePercentage, UpdateSourceTrigger=PropertyChanged}" 
                                FontSize="14"
                                Padding="10"
                                Margin="0,0,5,0"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"/>
                        <TextBlock Grid.Column="1"
                                  Text="%"
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="10,0,0,0"
                                  Foreground="#7F8C8D"/>
                    </Grid>
                    <TextBlock Text="ðŸ’¡ Por defecto 12.5% del disco" 
                              FontSize="12" 
                              Foreground="#7F8C8D"
                              FontStyle="Italic"
                              Margin="20,5,0,25"
                              TextWrapping="Wrap"/>

                    <!-- Optional: MFT Size -->
                    <CheckBox Content="Especificar tamaÃ±o de la MFT directamente (si no, se calcula del porcentaje)"
                             IsChecked="{Binding SpecifyMftSize}"
                             FontSize="14"
                             Foreground="#34495E"
                             Margin="0,0,0,10"/>
                    <Grid Margin="20,0,0,25" 
                          IsEnabled="{Binding SpecifyMftSize}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                Text="{Binding MftSizeValue, UpdateSourceTrigger=PropertyChanged}" 
                                FontSize="14"
                                Padding="10"
                                Margin="0,0,5,0"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"/>
                        <ComboBox Grid.Column="1"
                                 SelectedItem="{Binding MftSizeUnit}"
                                 FontSize="14"
                                 Padding="10"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="1">
                            <ComboBoxItem Content="Bytes"/>
                            <ComboBoxItem Content="KB"/>
                            <ComboBoxItem Content="MB" IsSelected="True"/>
                            <ComboBoxItem Content="GB"/>
                        </ComboBox>
                    </Grid>

                    <!-- Separator -->
                    <Border Height="1" Background="#E0E0E0" Margin="0,10,0,30"/>

                    <!-- Simulation Section -->
                    <TextBlock Text="ðŸŽ² SimulaciÃ³n" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,20"/>

                    <!-- Number of Files -->
                    <TextBlock Text="NÃºmero de Archivos a Simular" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <TextBox Text="{Binding NumberOfFiles, UpdateSourceTrigger=PropertyChanged}" 
                            FontSize="14"
                            Padding="10"
                            Margin="0,0,0,25"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"/>

                    <!-- Resident File Percentage -->
                    <TextBlock Text="Porcentaje de Archivos Residentes" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                Text="{Binding ResidentFilePercentage, UpdateSourceTrigger=PropertyChanged}" 
                                FontSize="14"
                                Padding="10"
                                Margin="0,0,5,0"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"/>
                        <TextBlock Grid.Column="1"
                                  Text="%"
                                  FontSize="14"
                                  VerticalAlignment="Center"
                                  Margin="10,0,0,0"
                                  Foreground="#7F8C8D"/>
                    </Grid>
                    <TextBlock Text="ðŸ’¡ Archivos residentes guardan sus datos dentro de la entrada MFT" 
                              FontSize="12" 
                              Foreground="#7F8C8D"
                              FontStyle="Italic"
                              Margin="0,5,0,0"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="White" Padding="30,20" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid MaxWidth="800">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                       Command="{Binding BackCommand}"
                       Content="â† Volver" 
                       FontSize="16"
                       Padding="20,12"
                       Margin="0,0,10,0"
                       Background="#95A5A6"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1" 
                       Command="{Binding ContinueCommand}"
                       Content="Continuar â†’" 
                       FontSize="16"
                       Padding="20,12"
                       Margin="10,0,0,0"
                       Background="#2ECC71"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#27AE60"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#BDC3C7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
